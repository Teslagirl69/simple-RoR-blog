
<%= link_to 'Back', articles_path %>
<%= form_for :article, url: articles_path, data: {turbo:false} do |f| %>
<div class="container">
    <div class="small-box mx-auto text-center">
 <h1>Make new article! </h1>

   <p>
      <%= f.label :title %> <br />
      <%= f.text_field :title %>
   </p>
   <p>
      <%= f.label :text %> <br />
      <%= f.text_area :text %>
   </p>
   <p>
      <%= f.submit %>
   </p>



 </div>
</div>
  <% end %>

<% if @article.errors.any? %>
<div class="container">
    <div class="small-box mx-auto text-left">
 <h2>The following errors prevented the article from saving:</h2>
 <ul>
 <% @article.errors.full_messages.each do |msg|%>
 <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>
</div>
</div>
