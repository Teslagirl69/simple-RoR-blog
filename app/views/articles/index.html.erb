
<h1 align="center">List of articles</h1>
<% @articles.each do |article| %>
<div class="card">
  <div class="card-header">
   <div class="fw-semibold">
     <%= link_to article.title, article_path(article) %>
   </div>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <p> <%= truncate(article.text, length: 100) %></p>
      <footer class="blockquote-footer">Posted by <cite title="Source Title"><%= article.user.username %></cite></footer>
    </blockquote>
    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
      <%= button_to "PDF", article_path(article, format: :pdf), method: :get, class: "btn btn-xs btn-outline-secondary" %>&nbsp;
      <%= button_to "Edit", edit_article_path(article),method: :get, class: "btn btn-xs btn-primary" %>&nbsp;
      <%= button_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure you want to delete this article?"}, class: "btn btn-xs btn-danger" %>
    </div>
  </div>
</div>
<% end %>
</br>
<div align="center">
<%= paginate @articles, window: 2%>
</div>
</br>
