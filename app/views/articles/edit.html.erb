<h1>Edit article! </h1>

<%= link_to 'Back', articles_path %>
<% if @article.errors.any? %>
 <h2>The following errors prevented the article from saving:</h2>
 <ul>
 <% @article.errors.full_messages.each do |msg|%>
 <li><%= msg %></li>
 <% end %>
 </ul>
<% end %>
<%= form_for :article, url: article_path(@article), method: :put, data: {turbo:false} do |f| %>
   <p>
      <%= f.label :title %> <br />
      <%= f.text_field :title %>
   </p>

   <p>
      <%= f.label :text %> <br />
      <%= f.text_area :text %>
   </p>

 <p>
  <%= f.submit %>
 </p>

<% end %>

